<!-- Jsp설정(서블릿에서 결과를 리턴할 jsp호출하는 방법) -->
<bean id="viewResolver"
	class="org.springframework.web.servlet.view.UrlBasedViewResolver">
	<property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
	<property name="contentType" value="text/html; charset=euc-kr"></property>	
	<property name="suffix" value=".jsp" />

</bean>




 <!-- 데이터 베이스 연결 클래스 등록 -->
 <bean id="shoppingDao" class="model.ShoppingDAO"  p:dataSource-ref="dataSource"  /> 
 
 <!-- 데이터 베이스 설정(오라클용 데이터 베이스) -->
 <bean id="dataSource" 
 class="org.springframework.jdbc.datasource.DriverManagerDataSource">

 <property name="driverClassName">
 	<value>oracle.jdbc.driver.OracleDriver</value>
 </property>
 <property name="url">
 	<value>jdbc:oracle:thin:@localhost:1521:XE</value>
 </property>
 <property name="username">
 	<value>system</value>
 </property>
 <property name="password">
 	<value>123456</value>
 </property>
 </bean> 


<!-- 스프링에서 파일을 다운할 클래스를 선언 -->
<bean class="org.springframework.web.servlet.view.BeanNameViewResolver">
	<property name="order">
		<value>0</value>
	</property>
</bean>
<bean id="downloadView" class="controller.DownloadView" />

</beans>












